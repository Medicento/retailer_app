<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_height="match_parent">

        <com.medicento.medicento.components.Logo
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_marginBottom="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.medicento.medicento.components.MEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hint="Email Address"
                android:id="@+id/emailView"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:leftImage="@drawable/mail"/>

            <com.medicento.medicento.components.MEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hint="Password"
                android:id="@+id/passwordView"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:leftImage="@drawable/locked"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="DL Number"
            android:id="@+id/dlNumberView"
            android:layout_weight="1"
            app:leftImage="@drawable/locked"
            android:layout_marginEnd="10dp"/>

            <com.medicento.medicento.components.MEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Phone Number"
                android:layout_weight="1"
                android:id="@+id/phoneView"
                android:layout_marginStart="10dp"
                app:leftImage="@drawable/call"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Shop's Name"
            android:id="@+id/shopView"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            app:leftImage="@drawable/mall"/>

        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Owner's Full Name"
            android:layout_weight="1"
            android:id="@+id/nameView"
            android:layout_marginStart="10dp"
            app:leftImage="@drawable/user"/>
        </LinearLayout>



        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Signup"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/background_button"/>
</LinearLayout>
</ScrollView>
</RelativeLayout>