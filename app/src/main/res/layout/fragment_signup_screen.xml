<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_height="match_parent">

        <com.medicento.medicento.components.Logo
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_marginBottom="30dp"/>

        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Email Address"
            android:id="@+id/emailView"
            app:leftImage="@drawable/mail"/>

        <com.medicento.medicento.components.MEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:hint="GST Number"
            android:id="@+id/gstNumView"
            app:leftImage="@drawable/gst"
            />

        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="DL Number"
            android:id="@+id/dlNumberView"
            app:leftImage="@drawable/locked"/>

        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Shop's Name"
            android:id="@+id/shopView"
            app:leftImage="@drawable/mall"/>

        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Owner's Full Name"
            android:id="@+id/nameView"
            app:leftImage="@drawable/user"/>

        <com.medicento.medicento.components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Phone Number"
            android:id="@+id/phoneView"
            app:inputType="number"
            app:leftImage="@drawable/call"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.medicento.medicento.components.MEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Password"
                app:isPassword="true"
                app:leftImage="@drawable/locked"
                android:id="@+id/passwordView"/>

            <ImageButton
                android:id="@+id/togglepassword"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/passwordView"
                android:layout_alignBottom="@id/passwordView"
                android:src="@drawable/ic_view"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"/>
        </RelativeLayout>




        <Button
            android:id="@+id/register"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Signup"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/background_button"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
